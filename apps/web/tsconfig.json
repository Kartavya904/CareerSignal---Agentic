{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@careersignal/db": ["../../packages/db/src"],
      "@careersignal/db/*": ["../../packages/db/src/*"],
      "@careersignal/schemas": ["../../packages/schemas/src"],
      "@careersignal/schemas/*": ["../../packages/schemas/src/*"]
    },
    "allowJs": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
