{
  "name": "careersignal-agentic",
  "version": "0.1.0",
  "private": true,
  "description": "Semi-autonomous multi-agent career intelligence platform",
  "license": "UNLICENSED",
  "workspaces": [
    "apps/*",
    "packages/*",
    "agents/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/web",
    "build": "npm run build --workspace=@careersignal/core && npm run build --workspace=@careersignal/schemas && npm run build --workspace=@careersignal/db && npm run build --workspace=apps/web",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "db:migrate": "npm run db:push --workspace=@careersignal/db",
    "db:seed": "echo 'Seed runs on first API request'"
  },
  "devDependencies": {
    "drizzle-orm": "^0.29.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
